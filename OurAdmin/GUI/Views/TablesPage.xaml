            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="auto"
                    Height="45"
                    Margin="0,45,0,0"
                    Padding="24,0"
                    Command="{Binding DropTable}"
                    FontSize="20"
                    IsHitTestVisible="{Binding IsTableSelected}">
                    <TextBlock TextDecorations="Underline">
                        Remove Table
                    </TextBlock>
                </Button>
            </StackPanel>
            <Grid Margin="0,50,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Name="newTable"
                    Grid.Column="0"
                    Margin="5,0,0,0"
                    VerticalAlignment="Bottom"
                    materialDesign:HintAssist.Hint="carbrands"
                    FontSize="22"
                    Foreground="{StaticResource DEFAULT_WHITE}"
                    MaxLength="64"
                    MaxLines="1"
                    Text="{Binding NewTableToAdd}"
                    TextChanged="NewTableTextChanged" />
                <Button
                    Name="goBtn"
                    Grid.Column="1"
                    Width="auto"
                    Height="45"
                    Margin="45,25,0,0"
                    Padding="24,0"
                    HorizontalAlignment="Right"
                    Command="{Binding AddTable}"
                    FontSize="20">
                    <TextBlock TextDecorations="Underline">
                        Create Table
                    </TextBlock>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>